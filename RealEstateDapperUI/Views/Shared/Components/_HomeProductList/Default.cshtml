@model List<ResultProductDto>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Favori İlanlar</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6" style="margin-bottom:10px">
                        <a href="property-single.html">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@item.Type</span><span>@item.Name</span></div>
                                <img class="img-fluid" src=@item.Image alt="">
                                <div class="box-content">
                                    <h3 class="title">$@item.Price.ToString("N0")</h3>
                                    <span class="post">@item.City/@item.District</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                
                
            </div>
        </div>
    </div>
</section>