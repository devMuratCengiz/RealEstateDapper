@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<style>
    img{
        border-radius:50%;
        height:70px;
        width:70px;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyonlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Resim Url</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.ImageUrl</td>
                                    <td><img src="@item.ImageUrl" /></td>
                                    <td><a asp-action="Delete" asp-controller="PopularLocation" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="Update" asp-controller="PopularLocation" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>

                    </table>
                    <a asp-controller="PopularLocation" asp-action="Create" class="btn btn-outline-success">Oluştur</a>
                </div>
            </div>
        </div>
    </div>
</div>



