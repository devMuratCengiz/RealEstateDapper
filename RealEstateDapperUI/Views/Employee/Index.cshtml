@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Personel Adı</th>
                                <th scope="col">Unvan</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Telefon No</th>
                                <th scope="col">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Mail</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Status</td>
                                    <td><a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>

                    </table>
                    <a asp-action="Create" asp-controller="Employee" class="btn btn-outline-success">Oluştur</a>
                </div>
            </div>
        </div>
    </div>
</div>

