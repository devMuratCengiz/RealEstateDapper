@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Tür</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Title</td>
                                    <td>@item.Price</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                    
                                    
                                </tr>
                            }

                        </tbody>

                    </table>
                    <a asp-action="Create" asp-controller="Product" class="btn btn-outline-success">Oluştur</a>
                </div>
            </div>
        </div>
    </div>
</div>

