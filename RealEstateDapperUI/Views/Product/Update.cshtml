@model UpdateProductDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Ekle</h6>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <label>İlçe</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <br />
                    <label>Tür</label>
                    <input type="text" asp-for="Type" class="form-control" />
                    <br />
                    <label>Fotoğraf</label>
                    <input type="text" asp-for="Image" class="form-control" />
                    <br />
                    <label>Adres</label>
                    <input type="text" asp-for="Address" class="form-control" />
                    <br />
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn-outline-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

